      <script>def currentWiki = xwiki.getDocument('RecommendationsCode.WebHome').wiki
def recConfigObj = xwiki.getDocument('RecommendationsCode.RecEngineConfig').getObject('RecommendationsCode.RecEngineConfigClass')
def recContentConfigObj = xwiki.getDocument('RecommendationsCode.RecContentConfig').getObject('RecommendationsCode.RecContentConfigClass')
if(currentWiki != "xwiki") {
  def recConfigObj2 = xwiki.getDocument('xwiki:RecommendationsCode.RecEngineConfig').getObject('RecommendationsCode.RecEngineConfigClass')
  def recContentConfigObj2 = xwiki.getDocument('xwiki:RecommendationsCode.RecContentConfig').getObject('RecommendationsCode.RecContentConfigClass')
  if(recConfigObj2.getProperty('globalConfig').value == 1 &amp;&amp; recConfigObj.getProperty('globalConfig').value == 1) {
    recConfigObj = recConfigObj2
    recContentConfigObj = recContentConfigObj2
  }
}
def contentBasedState = recContentConfigObj.getProperty('contentBasedState').value
if(contentBasedState == 1) {
  def recommendationCurrentlyIndexing = false
  def pushObj = xwiki.parseGroovyFromPage('RecommendationsCode.PushscriptForScheduler')
  def blacklistedSpaces = recContentConfigObj.blacklistedSpaces
  def blacklist = blacklistedSpaces.replace(" ", "', '")
  def yesterday = new Date() - 1
  def updateDate = yesterday.format("yyyy-MM-dd HH:mm:ss")
  def hqlQuery = "where doc.hidden=false and doc.space not in ('${blacklist}') and doc.date &gt;= '${updateDate}'"
  def docList = services.query.hql(hqlQuery).execute()
  for (def document in docList) {
    try {
      if(!recommendationCurrentlyIndexing) {
        recommendationCurrentlyIndexing = true
        pushObj.send(currentWiki+':'+document, xwiki)
      }
    } finally {
      recommendationCurrentlyIndexing = false
    }
  }
}</script>
