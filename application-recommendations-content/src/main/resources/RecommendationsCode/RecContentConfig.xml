    <property>
      <cache>long</cache>
    </property>
    <property>
      <code>require(['jquery'], function ($) {
  $(function(){
    $("#HRecommendationsCode\\.RecContentConfig\\:").remove();
    $("#HContent-Basedrecommendations").detach().appendTo('#admin-page-content');
    $("#recommendation\\ engine_RecommendationsCode\\.RecContentConfig").detach().appendTo('#admin-page-content');
    $(".bottombuttons").detach().appendTo('#admin-page-content');
    var contenBasedRadio = $('input[name="RecommendationsCode.RecContentConfigClass_0_contentBasedState"]');
    var contenBasedSelect = $('input[name="RecommendationsCode.RecContentConfigClass_0_contentBasedState"]:checked');
    if(contenBasedSelect.val() != "1") {
      $('input[id="RecommendationsCode.RecContentConfig_RecommendationsCode.RecContentConfigClass_0_blacklistedSpaces"]').prop( "disabled", true);
      $('input[id="RecommendationsCode.RecContentConfig_RecommendationsCode.RecContentConfigClass_0_easyrecInternalAddress"]').prop( "disabled", true);
      $('#recommendationsAdminCB').hide();
    }
    contenBasedRadio.change(function(){ 
      contenBasedSelect = $('input[name="RecommendationsCode.RecContentConfigClass_0_contentBasedState"]:checked');
      if(contenBasedSelect.val() == "1") {
        $('input[id="RecommendationsCode.RecContentConfig_RecommendationsCode.RecContentConfigClass_0_blacklistedSpaces"]').prop( "disabled", false );
        $('input[id="RecommendationsCode.RecContentConfig_RecommendationsCode.RecContentConfigClass_0_easyrecInternalAddress"]').prop( "disabled", false );
        $('#recommendationsAdminCB').show();
      }
      else {
        if(contenBasedSelect.val() != "0") {
          contenBasedSelect.val(0);
        }
        $('input[id="RecommendationsCode.RecContentConfig_RecommendationsCode.RecContentConfigClass_0_blacklistedSpaces"]').prop( "disabled", true);
        $('input[id="RecommendationsCode.RecContentConfig_RecommendationsCode.RecContentConfigClass_0_easyrecInternalAddress"]').prop( "disabled", true);
        $('#recommendationsAdminCB').hide();
      }
    });
  });
});</code>
