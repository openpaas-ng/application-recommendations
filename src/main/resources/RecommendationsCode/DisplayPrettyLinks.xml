  <content>{{velocity}}
#if($request.get('pagesList'))
  #set($i = 0)
  #foreach($page in $request.get('pagesList').split(','))
    #if($i&lt;5)
      #if($xwiki.hasAccessLevel("view", $xcontext.getUser(), $page) &amp;&amp; $xwiki.exists($page))
        [[$xwiki.getDocument($page).getDisplayTitle()&gt;&gt;$page]]
        #set($i = $i+1)
      #end
    #end
  #end
#end
{{/velocity}}</content>
