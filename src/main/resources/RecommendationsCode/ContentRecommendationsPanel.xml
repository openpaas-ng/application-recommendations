    <property>
      <code>require(['jquery'], function ($) {
  $(function(){

    // easyrec configuration
    var userId = '$xcontext.getUser()';
    var easyrecAddress = '$xwiki.getDocument('RecommendationsCode.RecEngineConfig').get('easyrecServerAddress')';
    var easyrecApiKey = '$xwiki.getDocument('RecommendationsCode.RecEngineConfig').get('easyrecApiKey')';
    var easyrecTenantId = '$xwiki.getDocument('RecommendationsCode.RecEngineConfig').get('easyrecTenantId')';
    var idList = [];
    var splitId = [];

    if(!easyrecAddress.empty() &amp;&amp; !easyrecApiKey.empty() &amp;&amp; !easyrecTenantId.empty()) {
      $.ajax({
        dataType: 'jsonp',
        url: easyrecAddress+'api/1.0/json/relateditems?assoctype=PROFILE_SIMILARITY&amp;apikey='+easyrecApiKey+'&amp;tenantid='+easyrecTenantId+'&amp;itemid='+XWiki.currentSpace+'.'+XWiki.currentPage,
        timeout: 2000,
        success : function(data, status) {
          if(data.recommendeditems) {
            if($.isArray(data.recommendeditems.item)) { // .each() won't work if it isn't an array (one element only)
              data.recommendeditems.item.each(function(value) {
                idList.push(value.id); //push recommendations to the list
              });
            }
            else {
              idList.push(data.recommendeditems.item.id);
            }
          }
        },
        complete : function(XHR, status) { // Display the results
          if(status == "success") {
            var listSize = idList.length;
            if(listSize == 0) {
              $('#recommendationsList3').html('&lt;em&gt;No result&lt;/em&gt;');
            }
            else {
              $.ajax({
                dataType : 'html',
                url : '/xwiki/bin/get/RecommendationsCode/DisplayPrettyLinks',
                method : 'POST',
                data : 'pagesList='+idList,
                success : function(data, status) {
                  $('#recommendationsList3').html(data);
                }
              });
            }
          }
          else {
            $('#recommendationsList3').html('&lt;em&gt;Unable to reach easyrec server : '+status+'&lt;/em&gt;');
          }
        }
      });
    }
    else {
      $('#recommendationsList3').html('&lt;em&gt;You have to set up an easyrec server to use this extension&lt;/em&gt;');
    }

  });
});</code>
