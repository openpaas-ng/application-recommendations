    <property>
      <script>def recommendationCurrentlyIndexing = false
def pushObj = xwiki.parseGroovyFromPage('RecommendationsCode.PushscriptForScheduler')
def blacklistedSpaces = xwiki.getDocument('RecommendationsCode.RecEngineConfig').getObject('RecommendationsCode.RecEngineConfigClass').blacklistedSpaces
def blacklist = blacklistedSpaces.replace(" ", "', '")
def yesterday = new Date() - 1
def updateDate = yesterday.format("yyyy-MM-dd HH:mm:ss")
def hqlQuery = "where doc.space not in ('${blacklist}') and doc.date &gt;= '${updateDate}'"
def docList = xwiki.searchDocuments(hqlQuery)
for (def document in docList) {
  try {
    if(!recommendationCurrentlyIndexing) {
      recommendationCurrentlyIndexing = true
      pushObj.send(document, xwiki)
    }
  } finally {
    recommendationCurrentlyIndexing = false
  }
}</script>
