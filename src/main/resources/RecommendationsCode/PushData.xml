    <property>
      <code>require(['jquery'], function ($) {
  $(function(){
    var userId = '';
    var easyrecAddress = '$xwiki.getDocument('RecommendationsCode.RecEngineConfig').get('easyrecServerAddress')';
    var easyrecApiKey = '$xwiki.getDocument('RecommendationsCode.RecEngineConfig').get('easyrecApiKey')';
    var easyrecTenantId = '$xwiki.getDocument('RecommendationsCode.RecEngineConfig').get('easyrecTenantId')';
    var sessionId = '$request.getHttpServletRequest().getSession().getId()';
    var resultDataElement = $('.recommendations-data').html();
    var resultData = JSON.parse(decodeURIComponent(resultDataElement).replace(/\+/g, ' '));
    if(resultData.userId !== 'XWiki.XWikiGuest') {
      var userId = '&amp;userid='+resultData.userId;
    }
    var docFullName = resultData.fullName;
    var docName = resultData.name;
    var spaceName  = resultData.space;
    var hidden = resultData.hidden;
    var deleteForm = resultData.deleteForm;

    if((XWiki.contextaction == 'view' || XWiki.contextaction == 'edit') &amp;&amp; !XWiki.docisnew &amp;&amp; !easyrecAddress.empty() &amp;&amp; !easyrecApiKey.empty() &amp;&amp; !easyrecTenantId.empty() &amp;&amp; !hidden) {
      $.ajax({
        dataType: 'jsonp',
        url: ''+easyrecAddress+'api/1.0/json/sendaction?actiontype='+XWiki.contextaction.toUpperCase()+'&amp;apikey='+easyrecApiKey+'&amp;tenantid='+easyrecTenantId+'&amp;itemid='+docFullName+'&amp;itemdescription='+docName+'&amp;itemurl=/xwiki/bin/view/'+spaceName+'/'+docName+'&amp;sessionid='+sessionId+''+userId+'',
      });
    }
    else if(XWiki.contextaction == 'delete' &amp;&amp; deleteForm == "1" &amp;&amp; !easyrecAddress.empty() &amp;&amp; !easyrecApiKey.empty() &amp;&amp; !easyrecTenantId.empty()) {
      $.ajax({
        dataType: 'jsonp',
        url: ''+easyrecAddress+'api/1.0/setitemactive?active=false&amp;apikey='+easyrecApiKey+'&amp;tenantid='+easyrecTenantId+'&amp;itemid='+docFullName,
      });
    }
  });
});</code>
